# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{js,css,html,md}]
indent_style = tab
indent_size = 4

[package.json,.travis.yml,.eslintrc]
indent_size = 2
indent_style = space
